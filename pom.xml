        <repository>
            <id>github</id>
            <name>GitHub OWNER Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/byteplus-rec/byteplus-sdk-java-rec</url>
        </repository>
    </distributionManagement>
</project>